<?xml version="1.0"?>
<ruletest xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          id="hibernate51-53-test" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/data-hibernate51-53/</testDataPath>
    <rulePath>../hibernate51-53.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="hibernate51-53-00000-test">
                <when>
                    <not>
                        <iterable-filter size="3">
                            <hint-exists message="Hibernate 5.3 has compatibility issues with previous versions" />
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Hint for Hibernate 5.1 Type was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
